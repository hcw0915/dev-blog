---
import HeaderLink from './HeaderLink.astro'
import { SITE_TITLE, HOMEPAGE_URL } from '../config'
import { IoLogoGithub } from 'react-icons/io5'
import FootprintIcon from './icons/footprint'
import ThemeToggle from './ThemeToggleButton'
---

<header
  class="fixed w-full p-2 z-20 bg-slate-100 dark:bg-zinc-900 transition-colors"
>
  <div class="mx-auto max-w-5xl justify-between flex">
    <nav class="w-full flex items-center justify-between gap-3 text-base">
      <a href="/" class="group">
        <h2 class="font-semibold tracking-tighter p-2 font-mplus text-lg">
          <img class="w-8 inline-block mr-2" src="/favicon-32x32.png" />
          {SITE_TITLE}
        </h2>
      </a>
      <div class="items-center gap-6 flex">
        <HeaderLink href="/posts">Blog</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
        <ThemeToggle client:visible />
      </div>
    </nav>
  </div>
</header>
